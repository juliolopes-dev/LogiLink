# ============================================
# Variáveis de Ambiente - LogiLink DRP System
# ============================================

# Ambiente
NODE_ENV=production

# Servidor
PORT=3000
HOST=0.0.0.0

# Banco de Dados Principal (Prisma)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Banco de Dados de Auditoria (pg)
DB_AUDITORIA_HOST=localhost
DB_AUDITORIA_PORT=5432
DB_AUDITORIA_USER=postgres
DB_AUDITORIA_PASSWORD=password
DB_AUDITORIA_DATABASE=auditoria
DB_AUDITORIA_SCHEMA=auditoria_integracao

# Firebase Admin SDK (para notificações push)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Timezone
TZ=America/Sao_Paulo
